---
const { img_path = "" } = Astro.props;
const { logo = "" } = Astro.props
---


<style>
    .container {
      display: flex;
      min-height: inherit;
      margin: 2em;
      /*border: 3px solid #a49898;*/
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 8px 8px 36px 0px rgba(0, 0, 0, 0.3);
      padding: 2em ;
      /* background-image:url({img_path}); */
      background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    text-align: center;
     
    }
    .container:hover {
      transition: 0.4s;
    }
    .container :global(.wrapper) {
      height: inherit;
    }
  
    .container :global(h2) {
      font-family: "Atkinson Hyperlegible", sans-serif;
      font-weight: 600;
      font-style: normal;
    }

    .container :global(h1) {
      font-family: "Atkinson Hyperlegible", sans-serif;
      font-style: normal;
      color:white;
      font-size: 3em;
    }
    .container :global(h3) {
      font-family: "Atkinson Hyperlegible", sans-serif;
      font-weight: 500;
      font-style: normal;
    }
    .container :global(p) {
      font-family: "Atkinson Hyperlegible", sans-serif;
      font-weight: 400;
      font-style: normal;
    }
    .container :global(.logo){
      width: 30%;
      height: auto;
      padding: 2em;
    }
