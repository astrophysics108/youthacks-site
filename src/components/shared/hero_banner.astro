---
//const { image_path = "" } = Astro.props;
import image_path from "../../../public/hero_banners/sy_london_youthacks_logo.png";
import hero_arrow from "../../../public/hero_banners/hero_arrow.svg";
---

<div class="container">
  <img class="image" src={image_path.src} />
  <div class="arrow_container"><img class="arrow" src={hero_arrow.src} /></div>
</div>

<style>
  .container {
    width: 100vw;
    height: 75vh;

    position: absolute;
    top: 0;
    z-index: -1;
  }
  .container .image {
    width: 100%;
    height: inherit;
    object-fit: cover;
  }
  .arrow {
    height: 10vh;
    width: 10vh;
  }

  .arrow_container {
    width: 100vw;
    position: relative;
    top: -20%;
    left: 50%;
    width: 50vw;
    align-self: center;
    z-index: 1;
  }
</style>
