---
// Import shared components
import Footer from "../components/shared/footer.astro";
import Head from "../components/shared/head.astro";
import Navbar from "../components/shared/navbar.astro";

// Create props for handling tab titles on different pages
const { tab_title = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  
  <head>
    <Head tab_title={tab_title} />
  </head>

  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  html body {
    margin: 0;
  }
</style>
