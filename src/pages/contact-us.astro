---
// Import default layout
import Default from "../layouts/default.astro";

// Import images
import HeroBanner from "../components/shared/hero_banner.astro";
import HeroBannerImage from "../../public/hero_banners/sy_london_youthacks_logo.png";
import ScrapyardCambridge1 from "../../public/images/scrapyard_cambridge_1.jpg";
import ScrapyardLondon1 from "../../public/images/scrapyard_london_1.jpg";
import ScrapyardCambridge2 from "../../public/images/scrapyard_cambridge_2.jpg";
import CounterspellCambridge1 from "../../public/images/counterspell_cambridge_1.png";

// Import components
import ImageDescription1 from "../components/layout/image_description_1.astro";
import TextDescription1 from "../components/layout/description.astro";
import TextButton from "../components/UI_components/text_button.astro";
---

<Default>
    <HeroBanner image_path={ScrapyardLondon1.src} text="< Contact Us >" />
    <TextDescription1>
        <h1>
            For Parents
        </h1>
        <p>
            Have a specific query about an event your child wants to go to? <br> Check our "For Parents" page 
            for more information, or send us an email directly at <a href="mailto:parents@youthacks.org">parents@youthacks.org</a>
        </p>
        <p>
            More information for parents can be found <a href="/for_parents">here</a>
        </p>
    </TextDescription1>
    <TextDescription1>
        <h1>
            For Companies
        </h1>
        <p>
        Want to help us put on more events? We'd love to have your help! Send us an email at <a href="mailto:enquiries@youthacks.org">enquiries@youthacks.org</a>
        </p>
        <p>
            Curious about what your support could do? See our <a href="/events">events page!</a>
        </p>
    </TextDescription1>
    <TextDescription1>
        <h1>
            Data Protection
        </h1>
        <p>
            For inquiries related to UK data protection regulations (GDPR), please reach out to us at: <a href="mailto:gdpr@youthacks.org">gdpr@youthacks.org</a>
        </p>
    </TextDescription1>
    <TextDescription1>
        <h1>
            Get in touch
        </h1>
        <p>
            Still haven't found what you're looking for? No worries! Send us an email at <a href="mailto:enquiries@youthacks.org">enquiries@youthacks.org</a> and a member of our team will get back to you
            as soon as we can.
        </p>
    </TextDescription1>
</Default>