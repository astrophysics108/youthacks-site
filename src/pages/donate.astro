---
import Default from '../layouts/default.astro';
import { Image } from "astro:assets";
import HeroBanner from "../components/shared/hero_banner.astro";
import HeroBannerImage from "../../public/hero_banners/coolashack1.jpg"; 
import CoolAsHack1 from "../../public/images/coolashack3.jpg";
import CoolAsHack2 from "../../public/images/coolashack5.jpg";
import ImageDescription1 from "../components/layout/image_description_1.astro"

---

<Default tab_title="Donate - Youthacks">
    <HeroBanner image_path={HeroBannerImage.src} text="<Support Us>"/>
    <section class="donate-page">
        <div class="container">
        <ImageDescription1>
        <div class="description">
        <div class="text_wrapper">
            <h1>Support YouthHacks</h1>
            <p>
                At YouthHacks, we are dedicated to empowering the next generation of innovators and problem-solvers. Your support helps us provide resources, organize events, and create opportunities for young minds to thrive in the world of technology.
            </p>
            <p>
                Whether you're an individual looking to make a difference or a company interested in sponsoring our initiatives, we welcome your contributions.
            </p>
        </div>
        </div>
        <div class="image">
            <div class="image_container">
              <Image alt="Scrapyard Cambridge Participants" src={CoolAsHack1} style="max-width: 100%; height: 100%;" />
            </div>
        </div>
        </ImageDescription1>
        <ImageDescription1>
            <div class="image">
                <div class="image_container">
                  <Image alt="Scrapyard Cambridge Participants" src={CoolAsHack2} style="max-width: 100%; height: 100%;" />
                </div>
            </div>
            <div class="description">
            <div class="text_wrapper">
            <h1>How to Donate or Sponsor</h1>
            <p>
                Please reach out to us at <a href="mailto:donate@youthacks.org">donate@youthacks.org</a> to discuss how you can support our mission. Every contribution, big or small, makes a meaningful impact.
            </p>
            <p>
                Thank you for helping us inspire and empower the next generation of tech leaders!
            </p>
            </div>
            </div>
        </ImageDescription1>
        
        </div>
        <h1>More Information about Sponsoring</h1>
        <div class = "container">
            <embed src= "/sponsor_prospectus.pdf" height = "500vh" width = "100%">
        </div>
        
    </section>

    <style>
        .donate-page {
            padding: 2rem;
            text-align: center;
        }
        .donate-page .container {
            max-width: 95%;
            margin: 0 auto;
        }
        .donate-page h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-family: "Atkinson Hyperlegible", sans-serif;
            font-weight: 600;
            font-style: normal;
        }
        .donate-page p {
            font-size: 1.2rem;
            line-height: 1.6;
            margin-bottom: 1rem;
        }
        .donate-page a {
            color: #0070f3;
            text-decoration: none;
        }
        .donate-page a:hover {
            text-decoration: underline;
        }
    </style>
</Layout></p>